<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#002134">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titulo_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_weight=".05"
                android:fontFamily="@font/fuente_uno"
                android:gravity="center_horizontal"
                android:text="Mejores Puntajes"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TableLayout
                android:id="@+id/listaplayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".05"
                android:foregroundGravity="center"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fuente_uno"
                    android:foregroundGravity="center"
                    android:gravity="center" />

            </TableLayout>

            <Button
                android:id="@+id/button"
                style="@style/estilos_boton"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/boton_salir"
                android:onClick="anterior"
                android:text="@string/TEXTO_BOTON_VOLVER" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
